{
  "root": true,
  "plugins": ["@sap/ui5-jsdocs"],
  "extends": ["plugin:@sap/ui5-jsdocs/recommended", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "eqeqeq": ["error", "always"],
    "no-var": ["error"]
  }
}
